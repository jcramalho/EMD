extends layout

block content
    .w3-card-4
        header(class="w3-container w3-teal")
            h3 Alterar EMD

        form(class='w3-container' method='POST' action='/emdAlterado')
            input(type="hidden" name="_id" value=emd._id)
            label.w3-text-teal.w3-cell Data de realização do EMD
            input.w3-input.w3-cell.w3-border.w3-border-large(type='text' name='dataExame' value=emd.dataExame)
            label.w3-text-teal.w3-cell Nome
            input.w3-input.w3-cell.w3-border.w3-border-large(type='text' name='nome' value=emd.nome)
            label.w3-text-teal.w3-cell Género
            if (emd.genero == "Masculino")
                input.w3-radio(type='radio' name='genero' value='Masculino' checked)
                label Masculino
                input.w3-radio(type='radio' name='genero' value='Feminino')
                label Feminino
            else
                input.w3-radio(type='radio' name='genero' value='Masculino')
                label Masculino
                input.w3-radio(type='radio' name='genero' value='Feminino' checked)
                label Feminino
            label.w3-text-teal.w3-cell Data de nascimento
            input.w3-input.w3-cell.w3-border.w3-border-large(type='text' name='dataNasc' value=emd.dataNasc)
            label.w3-text-teal.w3-cell Localidade
            input.w3-input.w3-cell.w3-border.w3-border-large(type='text' name='localidade' value=emd.localidade)
            label.w3-text-teal.w3-cell Contacto/email
            input.w3-input.w3-cell.w3-border.w3-border-large(type='text' name='contacto' value=emd.contacto)
            label.w3-text-teal.w3-cell Federado
            if emd.federado
                input.w3-radio(type='radio' name='federado' value='true' checked)
                label Sim
                input.w3-radio(type='radio' name='federado' value='false')
                label Não
            else
                input.w3-radio(type='radio' name='federado' value='true')
                label Sim
                input.w3-radio(type='radio' name='federado' value='false' checked)
                label Não
            label.w3-text-teal.w3-cell Modalidade
            input.w3-input.w3-border.w3-border-large(type='text' name='modalidade' value=emd.modalidade)
            label.w3-text-teal.w3-cell Clube
            input.w3-input.w3-border.w3-border-large(type='text' name='clube' value=emd.clube)
            label.w3-text-teal.w3-cell Resultado do EMD
            input.w3-input.w3-border.w3-border-large(type='text' name='resultadoEMD' value=emd.resultadoEMD)
            label.w3-text-teal.w3-cell Exame complementar
            input.w3-input.w3-border.w3-border-large(type='text' name='exameComplementar' value=emd.exameComplementar)
            label.w3-text-teal.w3-cell Pagamento
            if emd.pagamento == "Sim"
                input.w3-radio(type='radio' name='pagamento' value='Sim' checked)
                label Pago
                input.w3-radio(type='radio' name='pagamento' value='Não')
                label Não pago
            else
                input.w3-radio(type='radio' name='pagamento' value='Sim')
                label Pago
                input.w3-radio(type='radio' name='pagamento' value='Não' checked)
                label Não pago
            hr(width="80%")
            .w3-row.w3-margin
                input.w3-btn.w3-teal(type='submit' value='Alterar')

        footer.w3-container.w3-teal
            address Gerado por EMD :: 2019-Dezembro, jcr
